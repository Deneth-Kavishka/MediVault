# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/medivault
# For MongoDB Atlas (uncomment and replace with your connection string)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/medivault?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_long_and_complex
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@medivault.com

# File Upload Configuration
MAX_FILE_UPLOAD=1000000
FILE_UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=10
RATE_LIMIT_MAX=100

# Encryption
CRYPTO_SECRET=your_crypto_secret_for_sensitive_data_encryption

# QR Code Configuration
QR_CODE_SECRET=qr_code_signing_secret

# Admin Configuration
ADMIN_EMAIL=admin@medivault.com
ADMIN_PASSWORD=Admin@123456

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000

# Socket.IO Configuration
SOCKET_PORT=5001